<project>

  <!--
  This module creates a JAR for deployment inside the YARN ATS server. It's
  standalone so as to be isolated from any spark/scala dependencies.

  It's also excluded from the spark-assembly JAR: it isn't needed there;
  excluding it avoids (future) problems with conflicting versions of the classes
  ever getting into classpaths.
  -->
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.spark</groupId>
    <artifactId>spark-parent_2.10</artifactId>
    <version>1.6.1</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <groupId>org.apache.spark</groupId>
  <artifactId>spark-yarn-timeline-ats-plugin_2.10</artifactId>
  <packaging>jar</packaging>
  <name>Spark Project YARN Timeline Plugin</name>
  <description>
    This is a minimal pure-Java JAR which needs to be added to the
    YARN ATS classpath in order for it to successfully process histories
    published to it via the cluster's filesystem â€”that is, the ATS1.5 API.

    It is not intended for incorporation in any assembly JAR, and is only
    used by the yarn-timeline-history module at test time.
  </description>
  <version>1.6.1</version>
  <properties>
    <sbt.project.name>spark-yarn-timeline-ats-plugin</sbt.project.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-yarn-server-timeline-pluginstorage</artifactId>
    </dependency>
  </dependencies>

  <build>
    <outputDirectory>target/scala-${scala.binary.version}/classes</outputDirectory>
    <testOutputDirectory>target/scala-${scala.binary.version}/test-classes</testOutputDirectory>
    <plugins>

      <!-- an empty phase disables the shade -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
        </configuration>
        <executions>
          <execution>
            <phase/>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
